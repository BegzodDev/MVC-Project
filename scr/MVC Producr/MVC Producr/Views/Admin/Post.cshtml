@model MVC_Producr.Models.ViewModels.CreateProductViewModel
@{

}
<form method="post" action="Post">
    <div class="form-group">
        <label for="text">Product Name</label>
        <input type="text" class="form-control" asp-for="ItemName" required minlength ="3">
        <small class="form-text text-muted">Input Product name.</small>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" required>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" asp-for="Price" required>
    </div>    <h1></h1>
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="button" 
            onclick="location.href='@Url.Action("Index","Admin")'" 
            class="btn btn-info">Back</button>

    

</form>  